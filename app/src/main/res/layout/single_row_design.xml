<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:padding="10dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/shape"
        android:id="@+id/image_alphabet"
        android:padding="20dp"
        android:foregroundGravity="center">
    </ImageView>

    <TextView
        android:id="@+id/text_transparent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="50sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_alphabet"
        android:paddingLeft="15dp"
        android:text="Noreen Akhtar"
        android:textSize="25dp"
        android:textStyle="bold">
    </TextView>

    <ImageView
        android:id="@+id/image_call"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ahaan" />

    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_alphabet"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/image_alphabet"
        android:paddingLeft="30dp"
        android:text=" Monday"
        android:textSize="18dp">

    </TextView>

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_alphabet"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/image_outgoing"
        android:paddingLeft="5dp"
        android:text="Phone"
        android:textSize="18dp">

    </TextView>

    <TextView
        android:id="@+id/textjazz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_phone"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/image_alphabet"
        android:paddingLeft="5dp"
        android:text="Jazz"
        android:textSize="18dp">

    </TextView>

    <ImageView
        android:id="@+id/image_outgoing"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/image_alphabet"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/image_alphabet"
        app:srcCompat="@android:drawable/sym_call_outgoing" />

</RelativeLayout>